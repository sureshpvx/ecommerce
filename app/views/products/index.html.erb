<% content_for :title, "Products" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-100 mb-5 text-red-500 font-medium rounded-md inline-block" id="alert"><%= alert %></p>
  <% end %>
  <% if Current.user.present? %>
    <p> Welcome <%= Current.user.email_address%>!</p>
  <% end %>
  <%= render "layouts/navbar" %>
  <h1 class="font-bold text-4xl text-center">The Best Products</h1>
  <div class="container mx-auto mt-8 px-4">
    <div id="products" class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4">
      <% if @products.any? %>
        <% @products.each do |product| %>
          <%= render product %>
        <% end %>
      <% else %>
        <p class="text-center my-10">No products found.</p>
      <% end %>
    </div>
  </div>
  <%= render "layouts/footer" %>
</div>