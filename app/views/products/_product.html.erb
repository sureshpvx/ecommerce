<div class="bg-white rounded-md shadow-sm p-3">
  <% if product.images.attached? %>
    <%= image_tag product.images.first, class: "w-full h-120 object-cover rounded-t-md" %>
  <% end %>

  <h3 class="text-sm font-semibold mb-1 truncate">
    <a href="<%= product_path(product) %>" class="hover:underline">
      <%= link_to product.name, product_path(product), data: { turbo_frame: "_top" }, class: "hover:underline" %>
    </a>
  </h3>

  <p class="text-sm font-semibold text-gray-800">
    <% if product.price.present? %>
      ₹<%= product.price %>
    <% else %>
      Price: Contact Us
    <% end %>
  </p>

  <div class="flex items-center justify-between mt-3 space-x-3">
    <%= button_to cart_items_path(product_id: product.id), method: :post, data: { turbo: false },
                  class: "bg-yellow-500 hover:bg-yellow-600 text-black font-semibold py-2 px-4 rounded-md shadow-md flex items-center transition duration-300" do %>
      🛒 <span class="ml-2">Add to Cart</span>
    <% end %>

    <%= button_to "#", method: :post, data: { turbo: false },
                  class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md transition duration-300 shadow-md flex items-center justify-center" do %>
      🛍 <span class="ml-2">Buy Now</span>
    <% end %>
  </div>
</div>
