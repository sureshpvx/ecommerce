<h1>Your Cart</h1>

<% if @cart.cart_items.any? %>
  <% @cart.cart_items.each do |cart_item| %>
    <div>
      <p><%= cart_item.product.name %> - <%= cart_item.quantity %></p>

      <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
        <%= f.number_field :quantity, value: cart_item.quantity, min: 1 %>
        <%= f.submit "Update" %>
      <% end %>

      <%= button_to 'Remove', cart_item_path(cart_item), method: :delete, class: "bg-red-500 text-white px-2 py-1" %>
    </div>
  <% end %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

<%= link_to 'Continue Shopping', products_path, class: "bg-gray-500 text-white px-4 py-2" %>
